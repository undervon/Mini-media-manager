type Query {
    getPosts: [Post!]!
    getPost(id: String!): Post!
}

type Mutation {
    login(credentials: Credentials!): String!
    addPost(addPostInput: AddPostInput!): Post!
    addUser(credentials: Credentials!): User!
    deletePosts: String!
    deletePostById(id: String!): String!
    generatePresignedUrl: ResponsePresignedUrl!
}

# Login
input Credentials {
    email: String!
    password: String!
}
#

# User
type User {
    id: String!
    email: String!
    password: String!
}
#

# Post
type Image {
    id: String!
    path: String!
    status: String!         # [PENDING | ONLINE]
}

type Post {
    id: String!
    title: String!
    description: String!
    attachments: [Image!]!
}

input AddPostInput {
    title: String!
    description: String!
    attachments: [String!]!
}

type ResponsePresignedUrl {
    image: Image!
    url: String!
}
#
